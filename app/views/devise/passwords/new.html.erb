<div class="devises">
<br>

<h3>パスワードを忘れましたか？</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email ,"メールアドレス",class: "edit-label"%><br />
    <%= f.email_field :email, autofocus: true, class: "edit-field" %>
  </div>

  <div class="actions">
    <%= f.submit("パスワードをリセット", class: "btn-create-group") %>
  </div>
<% end %>

</div>

<br>

<%= render "devise/shared/links" %>
