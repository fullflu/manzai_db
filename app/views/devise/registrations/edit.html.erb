<div class="devises">
<br>
<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->
<h3> アカウント設定変更 </h3>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "メールアドレス",class: "edit-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "edit-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>



  <div class="field">
    <%= f.label :password, "パスワード" ,class: "edit-label" %>
    （
    <% if @minimum_password_length %>
      <%= @minimum_password_length %>文字以上。
    <% end %>変更しない場合、何も入力しないでください）
    <br />
    <%= f.password_field :password, autocomplete: "off" , class: "edit-field"%>
  </div>




  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認",class: "edit-label"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "edit-field"%>
  </div>


    <div class="field"><%= f.label :nickname,"ニックネーム" ,class: "edit-label" %>（6文字以下）<br />
    <%= f.text_field :nickname, placeholder: 'ニックネームを入力' , class: "edit-field"%></div>



  <div class="field">
    <%= f.label :current_password ,"現在のパスワード" ,class: "edit-label" %> （本人認証のため）<br />
    <%= f.password_field :current_password, autocomplete: "off" , class: "edit-field"%>
  </div>

  <div class="actions">
    <%= f.submit("更新",class: "btn-download") %>
  </div>
<% end %>

</div>

<br><br>

<h3>アカウントを削除</h3>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-download" %>
