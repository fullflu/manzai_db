<div class="devises">
<br>

<h3>新規登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "メールアドレス",class: "edit-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "edit-field" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" ,class: "edit-label" %>
    <% if @minimum_password_length %>（
      <%= @minimum_password_length %>文字以上
    <% end %>）
    <br />
    <%= f.password_field :password, autocomplete: "off" , class: "edit-field"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認",class: "edit-label"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "edit-field"%>
  </div>


    <div class="field"><%= f.label :nickname,"ニックネーム" ,class: "edit-label" %>（ 6文字以下）<br />
    <%= f.text_field :nickname, placeholder: 'ニックネームを入力' , class: "edit-field"%></div>

<div class="actions">
    <%= f.submit("登録する", class: "btn-create-group") %>
  </div>
<% end %>
</div>
<br>

<%= render "devise/shared/links" %>
