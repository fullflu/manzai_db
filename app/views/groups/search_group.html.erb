        <div id="yjMain">
          <article class="section">
            <div class="container">
              <header class="header header--section">
                <p class="text-group-search">
                 <%="投稿するグループを検索"%>
                </p>
              </header>
              <%= form_tag('/groups/search_group', method: :get) do %>
                <input class="search__query" name="keyword" placeholder="グループ名で検索" type="text" value=<%=@keyword %> ><button class="btn-search" title="検索" type="submit"><i class="icon ion-search"></i></button></input>
              <% end %>
            </div>
          </article>
          <article class="section">
          <% if @groups.length > 0 %>
            <div class="container">
              <header class="header header--section">
                <p class="text-group-search">
                <%= "検索結果" %>
                </p>
              </header>
                <% @groups.each do |group| %>
                <p class="search-results">
                <%= link_to "#{group.name}" ,"/groups/#{group.id}/products/create_title" %>
                </p>
              <% end %>
              <%= paginate(@groups) %>
            <% elsif @keyword %>
              <% if @keyword.length >0 %>
             <%= "「#{@keyword}」はまだ登録されていません。" %>
             <% end %>
            <% end%>
            </div>
              <p class="text-group-search">
             <%="新しくグループを作成して投稿しますか？"%>
            </p>
            <p class="create-group">
             <%= button_to 'グループを作成', "/groups/new", method: :get, class: "btn-create-group" %>
            </p>
          </article>
        </div>



