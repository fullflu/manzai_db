<div class = search>

            <div class="search_top">
              <header class="header header--search_top">
                <h2 class="text-middle">
                  <i class="icon-movie color-gray-light"></i>検索
                </h2>
              </header>
              <%= form_tag('/groups/search_top', method: :get) do %>
                <p>
                <%= label_tag :group_keyword, 'グループ名:' %>
                <%= text_field_tag :group_keyword, @group_keyword %>
                </p>
                <p>
                <%= label_tag :title_keyword, 'タイトル:' %>
                <%= text_field_tag :title_keyword, @title_keyword %>
                </p>
                  <%= submit_tag "検索", class: 'button' %>
              <% end %>
            </div>
</div>