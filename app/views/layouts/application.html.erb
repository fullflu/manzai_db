<!DOCTYPE html>
<html>
<head>
  <title>ManzaiDb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header class="header">
   <a href = "/groups">グループ一覧</a>
   <%= link_to '全タイトル一覧', products_path %>
</header>
<%= yield %>

  <footer class="funcbtn">
   <div class="funcbtn-contents">
    <a href="/">
     <i class="icon ion-home"></i>
    </a>
  </div>
  <% if user_signed_in?%>
    <div class="funcbtn-contents">
      <a class="postlink" href="/groups/search_group">
      <i class="icon ion-compose"></i>
      </a>
    </div>
    <div class="funcbtn-contents">
      <a class="mypagelink" href="/users/<%= current_user.id %>">
      <i class="icon ion-person"></i>
      </a>
    </div>
  <% else %>
    <div class="funcbtn-contents">
      <a class="mypagelink" href= "/users/sign_up", method="get">
      <i class="icon ion-android-person-add"></i>
      </a>
    </div>
    <div class="funcbtn-contents">
      <a class="mypagelink" href= "/users/sign_in", method="get">
      <i class="icon ion-person"></i>
      </a>
    </div>
  <% end %>
  </footer>

</body>
</html>
