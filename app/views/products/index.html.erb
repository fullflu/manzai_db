<p id="notice"><%= notice %></p>


<h1>
  <%= @group.name -%>のページ
</h1>

<p>
  <strong>Boke:</strong>
  <%= @group.boke %>
</p>

<p>
  <strong>Tsukkomi:</strong>
  <%= @group.tsukkomi %>
</p>

<h1>タイトル一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.user.nickname %></td>
        <td><%= product.group.name %></td>
        <td><%= product.title %></td>
        <td><%= link_to '詳細', product %></td>
          <% if user_signed_in? && current_user.id == @product.user_id %>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "新しく#{@group.name}のタイトルを作る", create_title_group_products_path %>
<%= link_to '全タイトル一覧', products_path %>
