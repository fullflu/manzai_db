<% if user_signed_in? %>
  <% if comment.like_user(current_user.id, comment) %>
    <%= button_to "/products/#{comment.product_id}/comments/#{comment.id}/likes", method: :delete, :id=>"like-button_#{comment.id}",  remote: true do %>
      <%= image_tag("icon_red_heart.png") %>
      <span>
        <%= comment.good %>
        <%= "いいね" %>
      </span>
    <% end %>
  <% else %>
    <%= button_to "/products/#{comment.product_id}/comments/#{comment.id}/likes", method: :post, :id=>"like-button_#{comment.id}", remote: true do %>
      <%= image_tag("icon_heart.png") %>
      <span>
        <%= comment.good %>
        <%= "いいね" %>
      </span>
    <% end %>
  <% end %>
<% else %>
      <%= image_tag("icon_heart.png") %>
      <span>
        <%= comment.good %>
        <%= "いいね" %>
      </span>
<% end %>