          <% if comment.like_user(current_user.id) %>
            <%= button_to "/products/#{comment.product_id}/comments/#{comment.id}/likes", method: :delete, id: "like-button", params: {product_id: comment.product_id} , remote: true do %>
              <%= image_tag("icon_red_heart.png") %>
              <span>
                <%= comment.good %>
              </span>
            <% end %>
          <% else %>
            <%= button_to "/products/#{comment.product_id}/comments/#{comment.id}/likes", method: :post, id: "like-button", params: {product_id: comment.product_id} ,remote: true do %>
              <%= image_tag("icon_heart.png") %>
              <span>
                <%= comment.good %>
              </span>
            <% end %>
          <% end %>